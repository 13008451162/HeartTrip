<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/app_img_1">
    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_2"
        android:text="欢迎使用"
        android:fontFamily="@font/app_font_2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="100dp"
        />

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="随心游!"
        app:layout_constraintStart_toEndOf="@id/text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_1"
        app:layout_constraintBottom_toBottomOf="@id/text_1"
        android:fontFamily="@font/app_font_2"
        android:textSize="30sp"
        android:textColor="#f9748f"
        android:textStyle="bold|italic"
        android:layout_marginEnd="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HeartTrip"
        android:fontFamily="@font/app_font_4"
        app:layout_constraintBottom_toTopOf="@id/text_2"
        app:layout_constraintStart_toStartOf="@id/text_2"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textColor="#fada1e"
        />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="        远离城市的喧嚣，尽享自然之美。\n在我们的民宿里，让心灵得到沉静和放松。"
        android:fontFamily="@font/app_font_1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>