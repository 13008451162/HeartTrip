<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/app_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/app_bottom_navigation"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/app_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/app_bottom_navigation_menu"
        app:labelVisibilityMode="auto"
        android:background="@drawable/app_bottom_navigation_background"
        app:itemRippleColor="#93a5cf"
        app:itemIconSize="28dp"
        android:paddingTop="5dp"
        app:elevation="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>