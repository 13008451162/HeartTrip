<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/avatar_previewLayout"
    tools:context=".view.UserAvatarPreviewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="头 像"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/personal_font_4"
        />
    <ImageView
        android:id="@+id/avatar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/personal_icon_back"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/personal_default_avatar_2"
        android:scaleType="centerCrop"
        />


</androidx.constraintlayout.widget.ConstraintLayout>