<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/attractions_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/attractions_iv_detail">
        <TextView
            android:id="@+id/attractions_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="端门"
            android:textSize="17sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/attractions_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市东城区景山前街4号故宫博物院内"
            android:textColor="#666666"
            android:layout_marginStart="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/attractions_iv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看详情"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/houseinfo_attraction_detail_background"
        android:textSize="10sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="#666666"
        android:layout_marginStart="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>