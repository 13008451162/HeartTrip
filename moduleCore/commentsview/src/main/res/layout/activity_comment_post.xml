<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CommentPostActivity">

    <LinearLayout
        android:id="@+id/comments_post_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009ce9"
        android:orientation="horizontal"
        android:paddingTop="17dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/comments_post_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/comments_icon_back" />

        <TextView
            android:id="@+id/comments_post_text"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingEnd="60dp"
            android:text="发表点评"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comments_post_rating_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/comments_corner_background"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_post_titleLayout">

        <TextView
            android:id="@+id/comments_post_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="民宿评分："
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_score_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_score_text"
            app:layout_constraintStart_toStartOf="@id/comments_post_cost_rating"
            app:layout_constraintTop_toTopOf="@id/comments_post_score_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp"
            app:srb_stepSize="0.5" />

        <TextView
            android:id="@+id/comments_post_tidy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="整洁程度："
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/comments_post_score_text"
            app:layout_constraintTop_toBottomOf="@id/comments_post_score_text" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_tidy_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_tidy_text"
            app:layout_constraintStart_toStartOf="@id/comments_post_cost_rating"
            app:layout_constraintTop_toTopOf="@id/comments_post_tidy_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp" />

        <TextView
            android:id="@+id/comments_post_traffic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="交通位置："
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/comments_post_tidy_text"
            app:layout_constraintTop_toBottomOf="@id/comments_post_tidy_text" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_traffic_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_traffic_text"
            app:layout_constraintStart_toStartOf="@id/comments_post_cost_rating"
            app:layout_constraintTop_toTopOf="@id/comments_post_traffic_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp" />

        <TextView
            android:id="@+id/comments_post_security_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="安全程度："
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/comments_post_traffic_text"
            app:layout_constraintTop_toBottomOf="@id/comments_post_traffic_text" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_security_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_security_text"
            app:layout_constraintStart_toStartOf="@id/comments_post_cost_rating"
            app:layout_constraintTop_toTopOf="@id/comments_post_security_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp" />

        <TextView
            android:id="@+id/comments_post_food_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="餐饮体验："
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/comments_post_security_text"
            app:layout_constraintTop_toBottomOf="@id/comments_post_security_text" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_food_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_food_text"
            app:layout_constraintStart_toStartOf="@id/comments_post_cost_rating"
            app:layout_constraintTop_toTopOf="@id/comments_post_food_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp" />

        <TextView
            android:id="@+id/comments_post_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="综合性价比："
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/comments_post_food_text"
            app:layout_constraintTop_toBottomOf="@id/comments_post_food_text" />

        <com.xuexiang.xui.widget.progress.ratingbar.ScaleRatingBar
            android:id="@+id/comments_post_cost_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_cost_text"
            app:layout_constraintStart_toEndOf="@id/comments_post_cost_text"
            app:layout_constraintTop_toTopOf="@id/comments_post_cost_text"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_starHeight="16dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/comments_corner_background"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_post_rating_layout">

        <TextView
            android:id="@+id/comments_post_current_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="0"
            app:layout_constraintEnd_toStartOf="@id/comments_post_max_text_num"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/comments_post_max_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="/ 200"
            app:layout_constraintEnd_toEndOf="@id/comments_post_comment_input"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/comments_post_comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/xui_transparent"
            android:fadeScrollbars="false"
            android:gravity="top|start"
            android:hint="写下评论……"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/comments_post_current_text_num" />

        <ImageView
            android:id="@+id/comments_post_clear_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comments_icon_delete_edittext"
            app:layout_constraintStart_toEndOf="@id/comments_post_comment_input"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/comments_post_comment_input"
            app:layout_constraintBottom_toBottomOf="@id/comments_post_comment_input"
            />
        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/comments_post_clear_button"
            style="@style/ButtonView.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingBottom="7dp"
            android:text="清空所选图片"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comments_post_comment_input" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comments_post_picture_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/comments_post_clear_button"
            />

        <ImageView
            android:id="@+id/comments_post_add_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/comments_icon_add_picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/comments_post_send_comment"
            app:layout_constraintTop_toBottomOf="@id/comments_post_picture_recycler" />

        <ImageView
            android:id="@+id/comments_post_send_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/comments_icon_send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/comments_post_add_picture" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>